

<%= form_for @user, html: {method: "put"} do |f|%>
	<%= f.label :username , "User Name"%>
	<%= f.text_field :username %>
	<%= f.label :email, "Please input Email" %>
	<%= f.email_field :email   %>
	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>
	<%= f.submit "Edit" %>

<% end %>



